{
  "name": "express-comcraft",
  "version": "0.0.0",
  "description": "RESTful API for computer store",
  "author": "phuritd",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "tsnd -r tsconfig-paths/register --rs ./src/bin/www",
    "start": "ts-node -r tsconfig-paths/register ./src/bin/www",
    "start:build": "node ./build/index.js",
    "start:docker": "docker run -p 3000:3000 express-comcraft",
    "lint": "eslint --ext .ts ./src",
    "prettier": "prettier --write ./src/**/*.{ts,js,json,css,scss,md}",
    "test": "jest --coverage --forceExit",
    "bundle": "esbuild ./src/bin/www --platform=node --bundle --minify --outfile=build/index.js",
    "build": "pnpm test && pnpm bundle",
    "build:docker": "pnpm build && pnpm docker:build",
    "docker": "pnpm docker:build",
    "docker:build": "docker build -t express-comcraft -f docker/build.Dockerfile .",
    "docker:dev": "docker build -t express-comcraft-dev -f docker/dev.Dockerfile ."
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "~1.4.6",
    "debug": "~4.3.4",
    "dotenv": "^16.0.3",
    "express": "~4.18.2",
    "express-validator": "^6.15.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.10.0",
    "morgan": "~1.10.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "~1.4.3",
    "@types/debug": "~4.1.7",
    "@types/eslint": "^8.21.1",
    "@types/express": "~4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "~1.9.4",
    "@types/node": "^18.13.0",
    "@types/passport": "^1.0.11",
    "@types/passport-jwt": "^3.0.8",
    "@types/prettier": "^2.7.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "esbuild": "^0.17.10",
    "eslint": "^8.34.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16.18.0",
    "pnpm": ">=7.27.0"
  }
}
